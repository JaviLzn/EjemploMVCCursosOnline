@model EjemploMVCCursosOnline.Models.Curso

@{
    ViewData["Title"] = "Borrar curso";
}


<h3>¿Está seguro de borrar este curso?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Título
        </dt>
        <dd class = "col-sm-10">
            @Model.Titulo
        </dd>
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Model.Descripcion
        </dd>
        <dt class = "col-sm-2">
            Fecha de publicación
        </dt>
        <dd class = "col-sm-10">
            @Model.FechaPublicacion
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-outline-danger" /> 
        <a asp-action="Index" class="btn btn-light"><i class="fas fa-arrow-left"></i> Regresar</a>
    </form>
</div>
