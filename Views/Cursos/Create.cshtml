@model EjemploMVCCursosOnline.Models.Curso

@{
    ViewData["Title"] = "Crear un Curso";
}


<h4>@ViewData["Title"] </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label font-weight-bold">Título del curso</label>
                <input asp-for="Titulo" class="form-control" placeholder="Escriba el título del curso" autocomplete="off"/>
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label font-weight-bold">Descripción del curso</label>
                <textarea asp-for="Descripcion" class="form-control" rows="5" placeholder="Escriba la descripción del curso"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaPublicacion" class="control-label font-weight-bold">Fecha de publicación</label>
                <input asp-for="FechaPublicacion" class="form-control" />
                <span asp-validation-for="FechaPublicacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-outline-primary w-100"><i class="fas fa-save"></i> Guardar</button>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-light w-100"><i class="fas fa-arrow-left"></i> Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

