@model IEnumerable<Curso>

@{
    ViewData["Title"] = "Index";
}
<!-- Modal placeholder -->
<div id="modal-placeholder"></div>

<h1>Lista de cursos disponibles</h1>

<p>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-backdrop="static" data-toggle="ajax-modal" data-target="#modal-Curso" data-url="@Url.Action("Create")"><i class="fas fa-plus"></i> Nuevo Curso</button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Título
            </th>
            <th>
                Descripción
            </th>
            <th>
                Fecha de Publicación
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Titulo
                </td>
                <td>
                    @item.Descripcion
                </td>
                <td>
                    @item.FechaPublicacion
                </td>
                <td>
                    <button type="button" class="btn btn-outline-info w-25" data-backdrop="static" data-toggle="ajax-modal" data-tooltip="tooltip" title="Editar" data-target="#modal-Curso" data-url="@Url.Action("Edit")/@item.Id"><i class="fas fa-edit"></i></button>
                    <a class="btn btn-outline-success w-25" asp-action="Details" asp-route-id="@item.Id" data-tooltip="tooltip" data-placement="top" title="Detalle"> <i class="fas fa-info"></i> </a>
                    <a class="btn btn-outline-danger w-25" asp-action="Delete" asp-route-id="@item.Id" data-tooltip="tooltip" data-placement="top" title="Eliminar"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        ///Mostrar Tooltip
        $(function () {
            $('[data-tooltip="tooltip"]').tooltip();

        });


    </script>
}