@model EjemploMVCCursosOnline.Models.Curso

@{
    ViewData["Title"] = "Detalle Curso";
}


<div>
    <h4>@ViewData["Title"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Título:
        </dt>
        <dd class="col-sm-10">
            @Model.Titulo
        </dd>
        <dt class="col-sm-2">
            Descripción:
        </dt>
        <dd class="col-sm-10">
            @Model.Descripcion
        </dd>
        <dt class="col-sm-2">
            Fecha de publicación:
        </dt>
        <dd class="col-sm-10">
            @Model.FechaPublicacion
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-info"><i class="fas fa-edit"></i> Modificar</a>
    <a asp-action="Index" class="btn btn-light"><i class="fas fa-arrow-left"></i> Regresar</a>
</div>
